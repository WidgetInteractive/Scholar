<GuiXml>
	<Controls>
		<TopLevelControl name="Scholar_ResearchTimersContainer" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="false">
			<Dimensions x="326" y="1" />
		</TopLevelControl>
		<Control name="Scholar_Timer" virtual="true">
			<Dimensions x="320" y="18" />
			
			<Controls>
				<StatusBar name="$(parent)Bar" inherits="ZO_DefaultStatusBarBG">
					<AnchorFill/>
				</StatusBar>
				<Label name="$(parent)Label" font="$(BOLD_FONT)|16|soft-shadow-thick" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED">
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Bar" relativePoint="TOPRIGHT" offsetY="-4"/>
				</Label>
				<Label name="$(parent)TimeLeft" font="$(MEDIUM_FONT)|14|thick-outline" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED">
					<Anchor point="CENTER" />
				</Label>
				<Button name="$(parent)Close" inherits="ZO_CloseButton" hidden="false">
					<Anchor point="RIGHT" relativeTo="$(parent)" relativePoint="LEFT" offsetX="-8" />
				</Button>
			</Controls>
                </Control>
	</Controls>
</GuiXml>